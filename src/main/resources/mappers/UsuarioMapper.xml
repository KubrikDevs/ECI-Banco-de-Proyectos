<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.cvds.persistence.mybatisimpl.mappers.UsuarioMapper">
    <insert id="insertarUsuario" parameterType="map">
            INSERT INTO USUARIOS
            VALUES (
            #{usuario.correo}, 
            #{usuario.contrase単a},
            #{usuario.nombre},
            #{usuario.rol},
            #{usuario.estado}
            )
    </insert>

    <select parameterType="map" id="consultarUsuario" resultMap="UsuarioResult" >
        SELECT    
        u.correo,
        u.contrase単a,
        u.nombre,
        u.rol,
        u.estado
        FROM USUARIOS AS u 
        WHERE u.correo=#{correo}
    </select>

    <select id="consultarTodosLosUsuario" parameterType="Usuario" resultMap="UsuarioResult">
        SELECT *
        FROM USUARIOS
    </select>

    <update parameterType="map" id="updateUsuario">
        UPDATE USUARIOS
        SET rol=#{rol}
        WHERE correo=#{correo};
    </update>

    <select parameterType="map" id="getRolUsuario" resultMap="UsuarioResult">
        select u.Rol FROM USUARIOS as u WHERE u.correo=#{correo};
    </select>

    <resultMap type='Usuario' id='UsuarioResult'>
        <id property='correo' column='correo' />
        <result property='contrase単a' column='contrase単a' />
        <result property='nombre' column='nombre' />
        <result property='rol' column='rol' />
        <result property="estado" column="estado" />


    </resultMap>
</mapper>